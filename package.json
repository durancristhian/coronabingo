{
    "name": "coronabingo",
    "version": "1.8.8",
    "private": true,
    "scripts": {
        "prebuild": "npm run validate-locales",
        "build": "next-translate && next build",
        "deploy-staging": "cp now.staging.json now.json && now",
        "deploy-prod": "cp now.prod.json now.json && now --prod",
        "dev": "next-translate && next dev",
        "download-boards": "ts-node scripts/download-boards",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "start": "next start",
        "validate-locales": "ts-node scripts/validate-locales"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run validate-locales && tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@fullhuman/postcss-purgecss": "^2.1.0",
        "@sentry/browser": "^5.15.0",
        "@svgr/webpack": "^5.2.0",
        "@types/classnames": "^2.2.10",
        "@types/node": "^13.9.2",
        "@types/react": "^16.9.23",
        "@types/react-copy-to-clipboard": "^4.3.0",
        "@types/react-modal": "^3.10.5",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "autoprefixer": "^9.7.4",
        "classnames": "^2.2.6",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "firebase": "^7.14.0",
        "gsheets": "^2.0.0",
        "husky": "^4.2.3",
        "isomorphic-unfetch": "^3.0.0",
        "knuth-shuffle": "^1.0.8",
        "lint-staged": "^10.1.2",
        "next": "^9.3.2",
        "next-compose-plugins": "^2.2.0",
        "next-images": "^1.3.1",
        "next-translate": "^0.14.2",
        "postcss-import": "^12.0.1",
        "prettier": "^1.19.1",
        "react": "^16.13.0",
        "react-copy-to-clipboard": "^5.0.2",
        "react-dom": "^16.13.0",
        "react-icons": "^3.9.0",
        "react-modal": "^3.11.2",
        "swr": "^0.1.18",
        "tailwindcss": "^1.2.0",
        "ts-node": "^8.8.2",
        "typescript": "^3.8.3",
        "url-loader": "^4.0.0"
    }
}
